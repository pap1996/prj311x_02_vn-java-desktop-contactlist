<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="mainWindow" prefHeight="486" prefWidth="701" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="controller.ContactController">
        <children>
            <Label layoutX="14" layoutY="19" prefHeight="18.0" prefWidth="80.0">Filter by group</Label>
            <ComboBox fx:id="cbGroup" layoutX="106.0" layoutY="13.0" prefHeight="26.0" prefWidth="146.0" onAction="#handleFilter">

            </ComboBox>
            <Label layoutX="283.0" layoutY="19.0" text="Enter contact information" />
            <TextField fx:id="search" layoutX="426.0" layoutY="14" prefHeight="26.0" prefWidth="203.0"/>
            <Button fx:id="btnSearch" layoutX="637.0" layoutY="15.0" mnemonicParsing="false" onAction="#searchContact" text="Search" />
            <TableView fx:id="tblContact" layoutX="21" layoutY="51" prefHeight="353" prefWidth="663">

         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
            </TableView>

            <Button fx:id="btnGroup" layoutX="587.0" layoutY="434.0" mnemonicParsing="false" text="Manage groups" />
            <Button fx:id="btnDelete" layoutX="14.0" layoutY="434.0" text="Delete" />
            <Button fx:id="btnAdd" layoutX="75.0" layoutY="434.0" text="Add" onAction="#searchContact" />
            <Button fx:id="btnUpdate" layoutX="124.0" layoutY="434.0" text="Update" />

        </children>





</AnchorPane>
